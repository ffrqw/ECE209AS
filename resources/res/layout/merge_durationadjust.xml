<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <com.rachio.iro.ui.view.RepeatClickableImageView android:layout_gravity="center_vertical" android:id="@+id/decrease" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="40dp" android:layout_height="30dp" app:srcCompat="@drawable/ic_minus_grey"/>
    <FrameLayout android:layout_gravity="center_vertical" android:layout_width="85dp" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/duration" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/flexadjustduration" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center" android:id="@+id/adjust" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center" android:id="@+id/duration_flex" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
    </FrameLayout>
    <com.rachio.iro.ui.view.RepeatClickableImageView android:layout_gravity="center_vertical" android:id="@+id/increase" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="40dp" android:layout_height="30dp" app:srcCompat="@drawable/ic_plus_grey"/>
</merge>
