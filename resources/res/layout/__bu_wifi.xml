<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:scrollbarStyle="outsideInset" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/__bu_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/__bu_wifi_ssid" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/__bu_ssid" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword">
            <requestFocus/>
