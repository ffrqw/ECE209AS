        <include layout="@layout/__bu_legacy_mode"/>
        <TextView android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/__bu_padding" android:text="@string/__bu_blinkup_footer" android:layout_weight="1.0"/>
    </LinearLayout>
</ScrollView>
