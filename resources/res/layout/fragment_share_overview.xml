<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/padding_general" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:padding="@dimen/padding_general" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/shareaccessprompt"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_general" android:text="By sharing access to your Iro, you allow a person of your choosing to view the device status, edit device settings, and manually run schedules and zones."/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="top" android:id="@+id/share_supporttext" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_general" android:text="@string/share_supportarticle"/>
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/share_add" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add Access" style="@style/ButtonSolidBlue"/>
</LinearLayout>
