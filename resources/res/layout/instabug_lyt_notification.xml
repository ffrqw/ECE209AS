<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/notificationLinearLayout" android:background="@drawable/instabug_lyt_notification_bg" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center_vertical" android:layout_width="64dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
            <com.instabug.library.view.CircularImageView android:id="@+id/senderAvatarImageView" android:layout_width="50dp" android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_weight="1.0">
            <TextView android:textSize="@dimen/instabug_normal_text_size" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="start" android:id="@+id/senderNameTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="8dp" android:text="Sender Name:" android:singleLine="true"/>
            <TextView android:textSize="@dimen/instabug_button_text_size" android:textColor="@color/instabug_text_color_grey" android:ellipsize="end" android:gravity="top|bottom|left|center_vertical|fill_vertical|center_horizontal|center" android:id="@+id/messageTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Message" android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
