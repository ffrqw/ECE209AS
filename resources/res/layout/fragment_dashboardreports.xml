        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/rachio_darker_grey" android:id="@+id/reports_user_used_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/reports_user_used" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp"/>
