        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/padding_general">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/rachio_darker_grey" android:id="@+id/reports_community_saved_label" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/reports_community_saved" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
