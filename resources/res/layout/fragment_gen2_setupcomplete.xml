<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/padding_general" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_general" android:src="@drawable/device_gen2"/>
    <TextView android:text="Setup Complete" style="@style/Gen2ProvTitle"/>
    <TextView android:text="Your controller is ready to use" style="@style/Gen2ProvDescription"/>
    <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/checkmark" android:scaleType="center" android:layout_weight="1.0"/>
    <Button android:id="@+id/setupcomplete_gotodashboard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_general" android:text="Start Using My Controller" style="@style/ButtonOutlineGreen"/>
    <Button android:id="@+id/setupcomplete_setupzones" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Set Up My Zones" style="@style/ButtonOutlineGreen"/>
</LinearLayout>
